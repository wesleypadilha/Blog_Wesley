<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<% if current_user == @article.user %>
<ul>
  <li><%= link_to "Edit", edit_article_path(@article), class: 'primary-button' %></li>
  <li><%= link_to "Destroy", article_path(@article), class: 'primary-button', data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>
<% end %>


<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
