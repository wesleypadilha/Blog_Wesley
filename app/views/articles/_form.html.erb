<nav class="navbar has-background-dark" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a class="navbar-item has-text-white" href="<%= root_path %>">
      Home
    </a>
  </div>

  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-end">
      <div class="navbar-item">
        <div class="buttons">
          <% if current_user %>
            <%= button_to "Log out", logout_path, method: "delete", class: 'button is-primary' %>
          <% else %>
            <%= link_to "Login", 'login', class: 'button is-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>

<div class="container is-max-widescreen">
  <section class="section is-medium">
    <%= form_with model: article do |form| %>
      <div class="card">
        <div class="card-content">
          <div class="content">
            <h1 class="title has-text-centered has-text-white">New Article</h1>
            <div class="field">
              <label class="label has-text-white">Title</label>
              <div class="control has-icons-left">
                <%= form.text_field :title, class:"input" %>
                <% article.errors.full_messages_for(:title).each do |message| %>
                  <div><%= message %></div>
                <% end %>
                <span class="icon is-small is-left">
                  <i class="fas fa-heading"></i>
                </span>
              </div>
            </div>
            <br>
            <div class="field">
              <label class="label has-text-white">Body</label>
              <div class="control has-icons-left">
                <%= form.text_area :body, class: "textarea" %><br>
                <% article.errors.full_messages_for(:body).each do |message| %>
                  <div><%= message %></div>
                <% end %>
              </div>
            </div>
            <div class="field">
              <%= form.submit "Post", class: "button is-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </section>
</div>

